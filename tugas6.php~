<?php
class calculatorsaya {
private $_volumeawal, $_volumeakhir;
public function __construct( $volumeawal, $volumeakhir ) {
$this->_volumeawal = $volumeawal;
$this->_volumeakhir = $volumeakhir;
}
public function add() {
return $this->_volumeawal + $this->_volumeakhir;
}
public function subtract() {
return $this->_volumeawal - $this->_volumeakhir;
}
public function multiply() {
return $this->_volumeawal * $this->_volumeakhir;
}
public function divide() {
return $this->_volumeawal / $this->_volumeakhir;
}
}
$calculator = new calculatorsaya(10, 5); 
echo $calculator-> add()."\n"; 
echo $calculator-> multiply()."\n"; 
echo $calculator-> subtract()."\n"; 
echo $calculator-> divide()."\n"; 
?>
